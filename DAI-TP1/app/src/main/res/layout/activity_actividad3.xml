<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese texto de 10 caracteres"
        android:textSize="25dp"
        android:inputType="text"
        android:id="@+id/Texto10Caracteres"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BotonInvertir"
        android:text="Invertir"
        android:enabled="false"
        android:textSize="30dp"
        android:onClick="Invertir"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto invertido"
        android:textSize="30dp"
        android:id="@+id/TextoInvertido"/>
</LinearLayout>